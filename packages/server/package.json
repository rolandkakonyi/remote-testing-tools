{
  "name": "server",
  "version": "1.0.0",
  "description": "Local Action Server - Core API server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "local-action-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "openapi:generate": "tsx src/generate-openapi.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fastify": "^4.24.3",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.52.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vitest": "^2.0.5"
  }
}
